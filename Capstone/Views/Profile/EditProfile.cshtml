@model Capstone.Models.ViewModels.EditProfileViewModel

<h2>Modifica Profilo</h2>

<form asp-action="EditProfile" enctype="multipart/form-data">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Cognome">Cognome</label>
        <input asp-for="Cognome" class="form-control" />
        <span asp-validation-for="Cognome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="RuoloPreferito">Ruolo Preferito</label>
        <select asp-for="RuoloPreferito" class="form-control">
            <option value="0">Portiere</option>
            <option value="1">Difensore</option>
            <option value="2">Centrocampista</option>
            <option value="3">Attaccante</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Residenza">Residenza</label>
        <input asp-for="Residenza" class="form-control" />
        <span asp-validation-for="Residenza" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ImmagineProfiloFile">Immagine del profilo</label>
        <input type="file" asp-for="ImmagineProfiloFile" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ImmagineProfilo))
        {
            <img src="~/@Model.ImmagineProfilo" alt="Immagine del profilo" width="150" />
        }
    </div>

    <button type="submit" class="btn btn-primary">Salva</button>
</form>
