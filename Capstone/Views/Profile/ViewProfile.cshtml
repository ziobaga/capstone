@model Capstone.Models.Auth.Users

<h2>Dettagli del Profilo</h2>

<div>
    <h4>@Model.Nome @Model.Cognome</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.Username</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Residenza</dt>
        <dd class="col-sm-10">@Model.Residenza</dd>

        <dt class="col-sm-2">Immagine del Profilo</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImmagineProfilo))
            {
                <img src="~/@Model.ImmagineProfilo" alt="Immagine del profilo" width="150" />
            }
            else
            {
                <img src="~/images/default-avatar.png" alt="Immagine di default" width="150" />
            }
        </dd>

        <dt class="col-sm-2">Ruolo Preferito</dt>
        <dd class="col-sm-10">
            @switch (Model.RuoloPreferito)
            {
                case Capstone.Models.Enums.RuoloPreferito.Attaccante:
                    @:Attaccante
                    break;
                case Capstone.Models.Enums.RuoloPreferito.Difensore:
                    @:Difensore
                    break;
                case Capstone.Models.Enums.RuoloPreferito.Centrocampista:
                    @:Centrocampista
                    break;
                case Capstone.Models.Enums.RuoloPreferito.Portiere:
                    @:Portiere
                    break;
                default:
                    @:Ruolo non specificato
                    break;
            }
        </dd>

        <dt class="col-sm-2">Valutazione Media</dt>
        <dd class="col-sm-10">@Model.ValutazioneMedia</dd>

        <dt class="col-sm-2">Partite Giocate</dt>
        <dd class="col-sm-10">@Model.PartiteGiocate</dd>
    </dl>

    <a asp-action="MatchList" class="btn btn-secondary">Torna alla lista partite</a>
</div>
