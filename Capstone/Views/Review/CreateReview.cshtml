@model Capstone.Models.ViewModels.ReviewViewModel

<h2>Valuta i Partecipanti</h2>

<h2>Valuta il Campo @Model.NomeCampo</h2>

<form asp-action="CreateReview" method="post">
    <input type="hidden" asp-for="MatchId" />
    <input type="hidden" asp-for="CampoId" />
    </div>
    <div class="form-group">
        <label for="Punteggio">Punteggio</label>
        <div class="star-rating">
            <input type="radio" id="star5" name="Punteggio" value="5" /><label for="star5" title="5 stelle"><i class="fas fa-star"></i></label>
            <input type="radio" id="star4" name="Punteggio" value="4" /><label for="star4" title="4 stelle"><i class="fas fa-star"></i></label>
            <input type="radio" id="star3" name="Punteggio" value="3" /><label for="star3" title="3 stelle"><i class="fas fa-star"></i></label>
            <input type="radio" id="star2" name="Punteggio" value="2" /><label for="star2" title="2 stelle"><i class="fas fa-star"></i></label>
            <input type="radio" id="star1" name="Punteggio" value="1" /><label for="star1" title="1 stella"><i class="fas fa-star"></i></label>
            <input type="radio" id="star0" name="Punteggio" value="0" /><label for="star0" title="0 stelle"><i class="fas fa-star"></i></label>
        </div>
    </div>
    <div class="form-group">
        <label for="Commento">Commento</label>
        <textarea asp-for="Commento" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Invia Recensione</button>
</form>
