@model Capstone.Models.Reviews

@{
    ViewData["Title"] = "Lascia una Recensione";
}

<h2>Lascia una Recensione</h2>

<form asp-action="CreateReview">
    <input type="hidden" asp-for="ValutatoCampoId" />

    <div class="form-group">
        <label for="Punteggio">Punteggio</label>
        <select asp-for="Punteggio" class="form-control">
            <option value="1">1 - Pessimo</option>
            <option value="2">2 - Mediocre</option>
            <option value="3">3 - Buono</option>
            <option value="4">4 - Ottimo</option>
            <option value="5">5 - Eccellente</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Commento">Commento</label>
        <textarea asp-for="Commento" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Invia Recensione</button>
</form>
